@model Guid 
<label>Cash on Delivery</label>
<form asp-area="PaymentCoD" asp-controller="CoD" asp-action="CoDCheckout" method="POST" id="checkout-payment" class="form-horizontal">
    <div class="form-group">
        <div class="col-md-12">
            <input type="hidden" value="@Model" name="checkoutId" />
            <button type="submit" class="btn btn-order">@Localizer["Cash on Delivery"]</button>
        </div>
    </div>
</form>
